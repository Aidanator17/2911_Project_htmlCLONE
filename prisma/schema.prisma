// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Match {
  match_id    String @id @default(uuid())
  playername  String @default("unknown")
  playercolor String
  AIcolor     String
  moves       String[]
  winner      String
  played      String
  time        String

  @@map(name: "matches")
}